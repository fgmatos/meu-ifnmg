.container
  .row
    .col-md-12
      .panel
        .panel-body
          %h2
            = image_tag("flat-icons/office/svg/contract", size: "100x60") 
            Contratos
  .row
    .col-md-12.col-sm-3
      .panel
        .panel-body 
        
          %table#dados-contratos.table.table-hover
            %thead
              %tr
                %td 
                  %b Nº 
                %td 
                  %b Nº Contrato
                %td 
                  %b Modalidade
                %td 
                  %b Situação
                %td 
                  %b Contratado
                %td 
                  %b Unidade
                %td 
                  %b Objeto
                %td 
                  %b link
            %tbody
              - @contratos.each do | c |
                %tr
                  %td 
                    = c[:ref]
                  %td 
                    = c[:numero]
                  %td 
                    = c[:modalidade]
                  %td 
                    = c[:situacao]
                  %td 
                    = c[:contratado]
                  %td 
                    = c[:unidade]
                  %td 
                    = c[:objeto]
                  %td 
                    %a{:href => c[:link], :target=> "_blank"}
                      = image_tag "transparencia.gif", size:"60x30"
                    
      