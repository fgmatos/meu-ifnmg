  t1_count = FACADE.Diaria.where(:data => '2015-01-01'..'2015-03-30').count
  t2_count = FACADE.Diaria.where(:data => '2016-01-01'..'2016-03-30').count
  
  boxstats = {
    :box1 => { 
      :top => "01/2013 à 03/2016",
      :icon => "user",
      :text => FACADE.Servidor.all.count,
      :description => "Servidores passaram pelo IFNMG."
    },
    
    :box2 => {
      :top => "01/2011 à 03/2016", 
      :icon => "duplicate",
      :text => FACADE.Diaria.all.count,
      :description => "pedidos de Diarias foram executados."
    },
    
    :box3 => { 
      :top => "1º trimestre 2016 / 2015",
