
- @top10 = FACADE.Diaria.select(:valor).where(:data => "2015-01-01".."2015-12-31").group(:nome).order('sum_valor DESC').limit(3).sum(:valor)

.panel.panel-default
  .panel-heading
    = icon("th")
    %b TOP diárias 2015 - Pessoas
    %a.pull-right(data-toggle="collapse" data-target="#pessoas2015")
      = icon("chevron-down")
  .panel-body#pessoas2015.collapse.in
    %table.table.table-condensed.tablesorter#tbtop-servidores
      %thead
        %tr
          %th Nº
          %th Nome
          -# %th Campus
          %th R$ / dia
          %th Diarias Recebidas
        %tbody
          - total_ano = 0
          - num = 0
          - @top10.each do |nome, valor|
            - num = num + 1
            %tr
              %td= num
              %td
                - @s = FACADE.Servidor.where("nome = ?", nome)
                - if @s[0].nil?
                  -# %a{:href=> root_url + "servidor" }
                  = nome
                - else
                  %a{:href=> root_url + "servidor/" + @s[0].id.to_s }
                    = nome
                
              -# # %td
              %td= number_to_currency(valor.to_f/365, unit: "R$ ", separator: ",", delimiter: ".").to_s
              %td= number_to_currency(valor.to_f, unit: "R$ ", separator: ",", delimiter: ".").to_s
              - total_ano = total_ano + valor.to_f
          %tr
            %td{ :colspan=> "3"} 
              %b
                %center 
                  TOTAL
            %td
              %b=  number_to_currency(total_ano, unit: "R$ ", separator: ",", delimiter: ".").to_s
                
            